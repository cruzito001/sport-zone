---
import Layout from '../layouts/Layout.astro';
import { popularFields } from '../data/popularFields';
---

<Layout title="Canchas - SportZone">
  <main class="canchas-container">
    <h1>Nuestras Canchas</h1>
    <div class="filters">
      <select id="tipoFilter" class="filter-select">
        <option value="">Tipo de Fútbol</option>
        <option value="Fútbol rápido">Fútbol rápido</option>
        <option value="Fútbol 7">Fútbol 7</option>
        <option value="Fútbol 11">Fútbol 11</option>
      </select>
      <select id="cespedFilter" class="filter-select">
        <option value="">Tipo de Césped</option>
        <option value="Artificial">Artificial</option>
        <option value="Natural">Natural</option>
      </select>
    </div>
    <div class="table-container">
      <table id="canchasTable">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <th>Césped</th>
            <th>Extras</th>
            <th>Ubicación</th>
          </tr>
        </thead>
        <tbody>
          {popularFields.map((field) => (
            <tr>
              <td>{field.nombre}</td>
              <td>{field.tipo}</td>
              <td>{field.tipo_cesped}</td>
              <td>{field.extras}</td>
              <td>
                <a
                  href={`https://www.google.com/maps/search/?api=1&query=${field.coordenadas[0]},${field.coordenadas[1]}`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="map-link"
                >
                  Ver en mapa
                </a>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </main>
</Layout>

<style>
  .canchas-container {
    max-width: 1200px;
    margin: 2rem auto;
    padding: 0 1rem;
  }

  h1 {
    font-size: 2.5rem;
    color: #333;
    text-align: center;
    margin-bottom: 2rem;
  }

  .filters {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .filter-select {
    padding: 0.5rem 1rem;
    border-radius: 8px;
    border: 1px solid #ccc;
    background-color: #fff;
    font-size: 1rem;
    color: #333;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .filter-select:hover {
    border-color: #008000;
  }

  .filter-select:focus {
    outline: none;
    border-color: #008000;
    box-shadow: 0 0 0 2px rgba(0, 128, 0, 0.2);
  }

  .table-container {
    overflow-x: auto;
    background-color: #ffffff;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  table {
    width: 100%;
    border-collapse: collapse;
  }

  th, td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid #eee;
  }

  th {
    background-color: #f1f3f5;
    font-weight: 600;
    color: #333;
  }

  tr:hover {
    background-color: #f8f9fa;
  }

  .map-link {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: #008000;
    color: #ffffff;
    text-decoration: none;
    border-radius: 4px;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  .map-link:hover {
    background-color: #006400;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .filters {
      flex-direction: column;
    }

    .filter-select {
      width: 100%;
    }
  }
</style>

<script>
  function filterTable() {
    const tipoFilter = document.getElementById('tipoFilter') as HTMLSelectElement;
    const cespedFilter = document.getElementById('cespedFilter') as HTMLSelectElement;
    const table = document.getElementById('canchasTable') as HTMLTableElement;
    const rows = table.getElementsByTagName('tr');

    for (let i = 1; i < rows.length; i++) {
      const row = rows[i];
      const tipo = row.getElementsByTagName('td')[1].textContent;
      const cesped = row.getElementsByTagName('td')[2].textContent;

      if (
        (tipoFilter.value === '' || tipo === tipoFilter.value) &&
        (cespedFilter.value === '' || cesped === cespedFilter.value)
      ) {
        row.style.display = '';
      } else {
        row.style.display = 'none';
      }
    }
  }

  document.getElementById('tipoFilter')?.addEventListener('change', filterTable);
  document.getElementById('cespedFilter')?.addEventListener('change', filterTable);
</script>

